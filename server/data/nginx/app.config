server {
    listen 80;
    server_name api.admissionhelper.online;
    location / {
        return 301 https://$host$request_uri;
    }   
    location /.well-known/acme-challenge/ {
    root /var/www/certbot;
}    
}
server {
    listen 443 ssl;
    server_name api.admissionhelper.online;
    
    location / {
        proxy_pass http://node:8080; #for demo purposes
        proxy_redirect              off;
        proxy_set_header            Host $host;
        proxy_set_header            X-Real-IP $remote_addr;
        proxy_set_header            X-Forwarded-Host $server_name;
        proxy_set_header            X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header            X-Forwarded-Proto $scheme;

    }
    
    ssl_certificate /etc/letsencrypt/live/api.admissionhelper.online/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.admissionhelper.online/privkey.pem;
}
